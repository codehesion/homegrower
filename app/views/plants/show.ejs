<% include ../partials/header.ejs %>

<div class="viewport-container pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-header text-light bg-success">
                        <h3 class="mb-0"><%= plant.name %></h3>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">created <%= plant.createdFromNow() %></h6>
                        
                        <p class="card-text">
                            <%= plant.description %>
                        </p>

                    </div><!-- .card-body -->                   
                </div><!-- .card -->
                <ul class="list-group list-group-flush">
                    <a href="/strains/<%= plant.strain._id %>" class="list-group-item list-group-item-action bg-light">
                        <i class="fa fa-lg fa-envira text-success"></i>&nbsp;&nbsp;
                        <%= plant.strain.name %>
                    </a>
                    <a href="/plants/<%= plant._id %>/edit" class="list-group-item list-group-item-action text-light bg-primary">
                        <i class="fa fa-lg fa-edit"></i>&nbsp;&nbsp;
                        Edit Plant
                    </a>                        
                </ul>                
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            
</div><!-- .viewport-container -->

<% include ../partials/footer.ejs %>