<% include ../partials/header.ejs %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-body">
                        <h3 class="card-title"><%= plant.name %></h3>
                        <h6 class="card-subtitle mb-3 text-muted">created <%= plant.createdFromNow() %></h6>
                        
                        <p class="card-text">
                            <a href="/strains/<%= plant.strain._id %>"><%= plant.strain.name %></a>
                        </p>

                        <p class="card-text">
                            <%= plant.description %>
                        </p>

                        <a href="/plants/<%= plant._id %>/edit" class="btn btn-primary">
                            Edit Plant
                        </a>

                    </div><!-- .card-body -->                   
                </div><!-- .card -->
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            

