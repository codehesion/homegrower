<% include ../partials/header.ejs %>

<div class="viewport-container pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-body">
                        <h3 class="card-title">New Plant</h3>
                        <form method="post">
                            <div class="form-group">
                                <label for="strain">Strain</label>
                                <select name="strain" class="form-control">
                                    <% strains.forEach((strain) => { %>
                                        <option value="<%= strain._id %>"><%= strain.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea name="description" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success mt-3">
                                    <i class="fa fa-lg fa-save"></i>&nbsp;&nbsp;Save
                                </button>
                            </div>
                        </form>
                    </div><!-- .card-body -->                    
                </div><!-- .card -->
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            
</div><!-- .viewport-container -->

<% include ../partials/footer.ejs %>