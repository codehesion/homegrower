<% include ../partials/header.ejs %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-body">
                        <h3 class="card-title"><%= profileUser.local.username %></h3>
                        <h6 class="card-subtitle mb-2 text-muted">joined <%= profileUser.createdFromNow() %></h6>
                        
                        <p class="card-text">
                            You currently have <%= grows.length %> Active Grows.
                        </p>

                    </div><!-- .card-body -->
                    <ul class="list-group list-group-flush">
                        <% grows.forEach((grow) => { %>
                            <a href="/grows/<%= grow._id %>" class="list-group-item list-group-item-action">
                                <%= grow.name %> - <%= grow.plants.length %> Plants
                            </a>
                        <% }); %>
                        <a href="/grows/new" class="list-group-item list-group-item-action text-light bg-success">
                            New Grow
                        </a>
                    </ul>                    
                </div><!-- .card -->
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            

<% include ../partials/footer.ejs %>