<% include ../partials/header.ejs %>

<div class="viewport-container pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-header text-light bg-success">
                        <h3 class="mb-0"><%= grow.name %></h3>
                    </div>                    
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">created <%= grow.createdFromNow() %></h6>
                        
                        <p class="card-text">
                            <%= grow.description %>
                        </p>

                        <p class="card-text">
                            This Grow currently has <%= grow.plants.length %> Plants.
                        </p>

<!--                         <a href="/grows/<%= grow._id %>/edit" class="btn btn-primary">
                            Edit Grow
                        </a> -->

                    </div><!-- .card-body -->
                    <ul class="list-group list-group-flush">
                        <% grow.plants.forEach((plant) => { %>
                            <a href="/plants/<%= plant._id %>" class="list-group-item list-group-item-action bg-light">
                                <i class="fa fa-lg fa-leaf text-success"></i>&nbsp;&nbsp; 
                                <%= plant.name %>
                            </a>
                        <% }); %>
                        <a href="/grows/<%= grow._id %>/new-plant" class="list-group-item list-group-item-action text-light bg-success">
                            <i class="fa fa-lg fa-plus"></i>&nbsp;&nbsp;
                            New Plant
                        </a>
                        <a href="/grows/<%= grow._id %>/edit" class="list-group-item list-group-item-action text-light bg-primary">
                            <i class="fa fa-lg fa-edit"></i>&nbsp;&nbsp;
                            Edit Grow
                        </a>
                    </ul>                    
                </div><!-- .card -->
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            
</div><!-- .viewport-container -->

<% include ../partials/footer.ejs %>