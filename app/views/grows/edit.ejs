<% include ../partials/header.ejs %>

<div class="viewport-container pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-header text-light bg-success">
                        <h3 class="mb-0">Edit Grow</h3>
                    </div>                     
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control" value="<%= grow.name %>">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea name="description" class="form-control"><%= grow.description %></textarea>
                            </div>
                            <div class="form-group btn-group mt-5">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-lg fa-save"></i>&nbsp;&nbsp;Update
                                </button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal">
                                    Delete
                                </button>
                            </div>
                        </form>
                    </div><!-- .card-body -->                    
                </div><!-- .card -->

                <!-- Modal -->
                <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="delete-modal-label" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="delete-modal-label">Delete Grow ?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Warning! This action cannot be reversed!<br>
                                    Warning! This will also delete all Plants associated with this grow!<br>
                                    Do you wish to continue?
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <a type="button" href="/grows/<%= grow._id %>/delete" class="btn btn-danger">Continue &amp; Delete </a>
                            </div>
                        </div>
                    </div>
                </div><!-- .modal -->              
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            
</div><!-- .viewport-container -->

<% include ../partials/footer.ejs %>