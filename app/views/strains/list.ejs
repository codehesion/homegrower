<% include ../partials/header.ejs %>

<div class="viewport-container pb-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 ml-md-auto mr-md-auto text-center">
                <div class="card mt-3">
                    <div class="card-header text-light bg-success">
                        <h3 class="mb-0">Strains List</h3>
                    </div>                    
                    <div class="card-body">
                       
                        <p class="card-text">
                            There are currently <%= strains.length %> Strains.
                        </p>

                    </div><!-- .card-body -->
                    <ul class="list-group list-group-flush">
                        <% strains.forEach((strain) => { %>
                            <a href="/strains/<%= strain._id %>" class="list-group-item list-group-item-action">
                                <i class="fa fa-lg fa-leaf text-success"></i>&nbsp;&nbsp;
                                <%= strain.name %>
                            </a>
                        <% }); %>
                        <% if(user.isAdmin){ %>
                            <a href="/strains/new" class="list-group-item list-group-item-action text-light bg-success">
                                <i class="fa fa-lg fa-plus"></i>&nbsp;&nbsp;
                                New Strain
                            </a>
                        <% } %>    
                    </ul>                    
                </div><!-- .card -->
            </div><!-- .col -->
        </div><!-- .row -->    
    </div><!-- .container-fluid -->            
</div><!-- .viewport-container -->

<% include ../partials/footer.ejs %>